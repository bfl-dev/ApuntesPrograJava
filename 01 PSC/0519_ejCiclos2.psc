Proceso ejCiclo2
	//calcular potencia dando base y exponente usando ciclo de multipli.
	//entrada
	Definir base,expo,r Como Entero;
	Escribir "ingrese base";
	Leer base;
	Escribir "ingrese exponente";
	Leer expo;
	
	r<-base;
		
	//proceso
	
	si expo<1 Entonces
		r<-1;
		
	SiNo
		Repetir
