Proceso camionV1
	
	// entradas: combustible y kilometraje . 
	// proceso: calcular precio en base al redimiento
	// salida:  Costo del transporte
	
	//declaraci√≥n de variables y constantes
	Definir vCombustible,rendimiento,km,total como real;
	rendimiento <- 20; //se define como onstante
	
	//entradas
	Escribir  "Ingresa el valor del Combustible";
	leer vCombustible;
	Escribir " Ingresa el kilometraje";
	leer km;
	
	//proceso
	total <- (km/rendimiento)* vCombustible;
		
	//salida
	Escribir " El total del transporte es: $", total;
		
FinProceso
